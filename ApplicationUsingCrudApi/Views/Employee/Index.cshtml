@model IEnumerable<ApplicationUsingCrudApi.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center bg-primary bg-opacity-50 text-white border p-2 mb-4 rounded-3">
    <h1>Employees List</h1>
</div>

<p>
    <a class="btn btn-primary rounded-3" asp-action="Create">Create New</a>
</p>
@{
    if(TempData["success_msg"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Success</strong> @TempData["success_msg"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}
<table class="table table-bordered fs-5">
    <thead class="bg-black text-white">
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Department
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.id
                </td>
                <td>
                    @item.name
                </td>
                <td>
                    @item.email
                </td>
                <td>
                    @item.department
                </td>
                <td>
                    <a class="btn btn-primary rounded-3 ms-3" asp-action="Edit" asp-route-id="@item.id">Edit</a>
                    <a class="btn btn-success rounded-3 ms-3" asp-action="Details" asp-route-id="@item.id">Details</a>
                    <a class="btn btn-danger rounded-3 ms-3" asp-action="Delete" asp-route-id="@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
